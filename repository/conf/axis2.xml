<axisconfig xmlns="http://ws.apache.org/ns/axis2">
    <parameter name="log4j.configurationFile">conf/log4j2.xml</parameter>

    <transportReceiver name="http" class="org.apache.axis2.transport.http.SimpleHTTPServer">
        <parameter name="port">8290</parameter>
    </transportReceiver>

    <phases>
        <globalPhases>
            <phase name="OperationDispatch"/>
            <phase name="Transport"/>
            <phase name="PreDispatch"/>
            <phase name="Dispatch"/>
            <phase name="Security"/>
            <phase name="PolicyDetermination"/>
            <phase name="RMPhase"/>
            <phase name="Addressing"/>
        </globalPhases>

        <phaseOrder type="InFlow">
            <phase name="Transport"/>
            <phase name="PreDispatch"/>
            <phase name="Dispatch"/> </phaseOrder>

        <phaseOrder type="OutFlow">
            <phase name="MessageOut"/>
        </phaseOrder>

        <phaseOrder type="InFaultFlow">
            <phase name="InFaultPhase"/>
        </phaseOrder>

        <phaseOrder type="OutFaultFlow">
            <phase name="OutFaultPhase"/>
        </phaseOrder>
    </phases>
</axisconfig>